# Anthropic Configuration (Photo Analysis)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_TEMPERATURE=0.3
ANTHROPIC_MAX_TOKENS=2000
ANTHROPIC_TIMEOUT=45

# OpenAI Configuration (Future: Nutrition Agent)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo

# Firebase Configuration
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_bucket_name
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# WHOOP API Configuration
WHOOP_CLIENT_ID=your_whoop_client_id
WHOOP_CLIENT_SECRET=your_whoop_client_secret
WHOOP_REDIRECT_URI=http://localhost:7000/auth/whoop/callback

# Application Configuration
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=7000
DEBUG=true

# Sentry Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here

# Performance Settings
MAX_IMAGE_SIZE_MB=10
MIN_IMAGE_SIZE_KB=100
MAX_PROCESSING_TIME_SEC=45
TARGET_PROCESSING_TIME_SEC=30

# Analysis Thresholds
MIN_CONFIDENCE_SCORE=0.70
MIN_SHARPNESS_SCORE=50
